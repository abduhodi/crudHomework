<form action="/categories/<%= categoryId %>/new" method="post" class="addCard">
  <div class="card">
    <label for="productName">Product name</label><br />
    <input type="text" name="productName" class="input" required /> <br /><br />
    <label for="price">Price</label><br />
    <input type="text" name="price" class="input" required /> <br /><br />
    <label for="info">Info</label><br />
    <input type="text" name="info" class="input" required /> <br /><br />
    <button type="submit">Save</button>
  </div>
</form>
